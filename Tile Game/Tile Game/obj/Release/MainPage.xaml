                    <GradientStop Color="#FF2439C1" Offset="0.256"/>
                    <GradientStop Color="#FF2439C1" Offset="0.388"/>
                </LinearGradientBrush>
            </Grid.Background>
            <!-- Tile 1-->
            <Rectangle x:Name="Tile1" HorizontalAlignment="Left" Height="150" Margin="0,0,0,0" Grid.Row="1" Stroke="White" VerticalAlignment="Top" Width="150" IsDoubleTapEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False">
