                <GradientStop Color="#FF1E72C7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Margin="264,0,248,0" TextWrapping="Wrap" Text="RichCon Games: Tile Game" VerticalAlignment="Top" Height="99" Width="854" FontSize="72" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
