            <Rectangle x:Name="Tile13" HorizontalAlignment="Left" Height="150" Margin="0,450,0,0" Grid.Row="1" Stroke="White" VerticalAlignment="Top" Width="150" IsDoubleTapEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False">
