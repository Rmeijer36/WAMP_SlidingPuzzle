    <Page.BottomAppBar>
        <AppBar x:Name="Options" Background="#FF12355F">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Background="#FF12355F">
                    <Button x:ConnectionId='5'  x:Name="btnLoadPicture" Content="New&#xD;&#xA;Picture" Width="107" Height="100" FontWeight="Bold" Background="#FF1C41A6" FontSize="16"                             />
                    <Button x:ConnectionId='6'  x:Name="btnLoadCamera" Content="New&#xA;Camera &#xA;Picture" Width="107" Height="100" FontWeight="Bold" Background="#FF1C41A6" FontSize="16"                            />
                    <Button x:ConnectionId='7'  x:Name="btnRandomizeButtom" Content="Random&#xD;&#xA;Tiles" Width="107" Height="100" FontWeight="Bold" Background="#FF1C41A6" FontSize="16"                                 />
                    <Button  x:Name="btnSolveButton" Content="Solve&#xD;&#xA;Tiles" Width="107" Height="100" FontWeight="Bold" Background="#FF1C41A6" FontSize="16"/>
                    <Button  x:Name="btnToggleNumber" Content="Toggle&#xD;&#xA;Numbers&#xD;&#xA;(ON)" Width="107" Height="100" FontWeight="Bold" Background="#FF1C41A6" FontSize="16"/>
