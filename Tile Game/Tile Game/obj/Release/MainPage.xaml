                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF1BC37E" Offset="0.419"/>
                    <GradientStop Color="#FF2C11D8" Offset="0.717"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
            <TextBlock.RenderTransform>
